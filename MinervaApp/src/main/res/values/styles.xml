<resources>

    <style name="AppTheme" parent="@style/Theme.MaterialComponents.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionBarStyle">@style/AppTheme.ActionBar</item>
        <item name="android:statusBarColor">@color/lightGray</item>
        <item name="android:fontFamily">@font/font_family</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="AppTheme.ActionBar" parent="@style/Widget.MaterialComponents.Light.ActionBar.Solid">
        <item name="background">@color/lightGray</item>
        <item name="titleTextStyle">@style/AppTheme.ActionBarTitleText</item>
        <item name="elevation">0dp</item>
        <item name="height">64dp</item>
    </style>

    <style name="AppTheme.ActionBarTitleText" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/darkGray</item>
        <item name="android:fontFamily">@font/rubik_medium</item>
        <item name="android:textSize">24sp</item>
    </style>

</resources>
